datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model TeamRequest {
  id          String      @id @default(cuid())
  createdBy   String
  category    String
  objective   String
  description String
  createdAt   DateTime    @default(now())

  // Relación con User:
  user         User        @relation(fields: [userId], references: [id])
  userId       String

  applicants  Applicant[]
}

model Applicant {
  id            String      @id @default(cuid())
  name          String
  email         String
  message       String
  teamRequest   TeamRequest @relation(fields: [teamRequestId], references: [id])
  teamRequestId String
  createdAt     DateTime    @default(now())

  @@unique([email, teamRequestId])

}

model User {
  id       String   @id @default(cuid())
  username String   @unique
  password String
  requests TeamRequest[]  // relación opcional
}
